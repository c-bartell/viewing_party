<%= content_tag :h1, 'Welcome to Viewing Party!' %>
<%= content_tag :p, 'Invite all your friends and setup a viewing party to watch some exciting movies!
                     Remember, if you are watching a movie alone, Samara will find you and get you.' %>
<%= link_to "New to Viewing Party? Register Here.", registration_path %>
<%= form_with model: @user, url: login_path, local: true, method: :get do |f| %>
  <%= f.label 'E-mail Address' %>
  <%= f.text_field :email %>
  <%= f.label 'Password' %>
  <%= f.text_field :password %>
  <%= f.submit 'Login' %>
<% end %>
